<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Sai2Capture.Styles">

    <!-- 自定义窗口模板（无标题栏）-->
    <ControlTemplate x:Key="CustomWindowTemplate" TargetType="Window">
        <Border
            Background="White"
            CornerRadius="8"
            BorderBrush="{StaticResource PrimaryBrush}"
            BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect
                    Color="Black"
                    Opacity="0.2"
                    BlurRadius="15"
                    ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 自定义标题栏 -->
                <Border
                    x:Name="TitleBarBorder"
                    Grid.Row="0"
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="7,7,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 窗口标题 -->
                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="16,0,0,0">
                            <TextBlock
                                x:Name="WindowTitleText"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="White"
                                VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 窗口控制按钮（关闭按钮）-->
                        <StackPanel
                            Grid.Column="2"
                            Orientation="Horizontal"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button
                                x:Name="CustomCloseButton"
                                Style="{StaticResource CloseButtonStyle}"
                                Width="46" Height="28"
                                ToolTip="关闭">
                                <Path
                                    Data="M 0,0 L 10,10 M 10,0 L 0,10"
                                    Stroke="White"
                                    StrokeThickness="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 窗口内容 -->
                <ContentPresenter
                    Grid.Row="1"
                    Margin="8"/>

            </Grid>
        </Border>
    </ControlTemplate>

    <!-- 自定义对话框模板（带关闭按钮）-->
    <ControlTemplate x:Key="CustomDialogTemplate" TargetType="Window">
        <Border
            Background="White"
            CornerRadius="8"
            BorderBrush="{StaticResource PrimaryBrush}"
            BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect
                    Color="Black"
                    Opacity="0.2"
                    BlurRadius="15"
                    ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 自定义标题栏 -->
                <Border
                    x:Name="DialogTitleBarBorder"
                    Grid.Row="0"
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="7,7,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 对话框标题 -->
                        <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="16,0,0,0">
                            <TextBlock
                                x:Name="DialogTitleText"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="White"
                                VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- 关闭按钮 -->
                        <Button
                            Grid.Column="2"
                            x:Name="DialogCloseButton"
                            Style="{StaticResource CloseButtonStyle}"
                            Width="46" Height="28"
                            ToolTip="关闭">
                            <Path
                                Data="M 0,0 L 10,10 M 10,0 L 0,10"
                                Stroke="White"
                                StrokeThickness="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- 对话框内容 -->
                <ContentPresenter
                    Grid.Row="1"
                    Margin="16,8,16,8"/>


            </Grid>
        </Border>
    </ControlTemplate>

</ResourceDictionary>