<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- 主题颜色定义 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#39C5BB"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#2DA39A"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#00827D"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#4DB3B3"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#E8F8F7"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#D0D0D0"/>
    
    <!-- TabItem 颜色 -->
    <SolidColorBrush x:Key="TabItemForeground" Color="#666666"/>
    <SolidColorBrush x:Key="TabItemSelectedForeground" Color="#39C5BB"/>
    <SolidColorBrush x:Key="TabItemHoverBackground" Color="#F5FFFE"/>
    <SolidColorBrush x:Key="TabItemSelectedBackground" Color="#E8F8F7"/>
    <SolidColorBrush x:Key="TabItemSelectedHoverBackground" Color="#D5F5F3"/>

    <!-- 统一字体大小定义 -->
    <sys:Double x:Key="FontSizeSmall">11</sys:Double>
    <sys:Double x:Key="FontSizeNormal">12</sys:Double>
    <sys:Double x:Key="FontSizeMedium">13</sys:Double>
    <sys:Double x:Key="FontSizeLarge">18</sys:Double>

</ResourceDictionary>
