<UserControl x:Class="Sai2Capture.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:views="clr-namespace:Sai2Capture.Views"
             xmlns:converters="clr-namespace:Sai2Capture.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <!-- 通用转换器 -->
            <converters:UniversalConverter x:Key="UniversalConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <!-- 捕获设置 -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="捕获设置" Style="{StaticResource CardTitleStyle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Text="捕获间隔(秒):"
                            Style="{StaticResource LabelStyle}"
                            Margin="0,0,12,0"/>
                        <ui:NumberBox
                            Grid.Column="1"
                            Value="{Binding CaptureInterval}"
                            FontWeight="Normal"
                            Minimum="0.1" Maximum="10" SmallChange="0.1"
                            ToolTip="设置截图的时间间隔"/>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- 保存设置 -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="保存设置" Style="{StaticResource CardTitleStyle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Text="保存路径:"
                            Style="{StaticResource LabelStyle}"
                            Margin="0,0,12,0"/>
                        <ui:TextBox
                            Grid.Column="1"
                            Text="{Binding SavePath}"
                            FontWeight="Normal"
                            Margin="0,0,12,0"
                            ToolTip="截图保存的文件夹路径"/>
                        <ui:Button
                            Grid.Column="2"
                            Content="浏览"
                            Command="{Binding BrowseSavePathCommand}"
                            ToolTip="选择保存文件夹"/>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- 热键控制 -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="热键控制" Style="{StaticResource CardTitleStyle}"/>

                    <Grid Margin="0,8,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding HotkeyViewModel.HotkeysEnabled, Converter={StaticResource UniversalConverter}, ConverterParameter=BoolToToggleText, StringFormat='热键功能: {0}'}"
                                     FontWeight="Normal"
                                     Foreground="{DynamicResource ui:BodyForegroundBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="启用或禁用所有热键功能"
                                     FontWeight="Normal"
                                     FontSize="12"
                                     Foreground="{DynamicResource ui:BodyForegroundSecondaryBrush}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>

                        <ui:ToggleSwitch Grid.Column="1"
                                    IsChecked="{Binding HotkeyViewModel.HotkeysEnabled}"
                                    Command="{Binding HotkeyViewModel.ToggleHotkeysEnabledCommand}"
                                    VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- 快捷键配置 -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="快捷键配置" Style="{StaticResource CardTitleStyle}"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ui:Button Content="重置全部"
                                      Width="80"
                                      Margin="4,0,0,0"
                                      Command="{Binding HotkeyViewModel.ResetAllHotkeysCommand}"
                                      ToolTip="将所有快捷键重置为默认设置"/>
                        </StackPanel>
                    </Grid>

                    <!-- 热键表格 -->
                    <ui:ListView ItemsSource="{Binding HotkeyViewModel.Hotkeys}"
                               VirtualizingStackPanel.IsVirtualizing="True"
                               VirtualizingStackPanel.VirtualizationMode="Recycling"
                               SelectionMode="Single"
                               SelectedItem="{Binding HotkeyViewModel.SelectedHotkey}"
                               BorderThickness="0">
                        <ui:ListView.ItemContainerStyle>
                            <Style TargetType="ui:ListViewItem">
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ui:BorderBrush}"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ui:ListView.ItemContainerStyle>

                        <ui:ListView.View>
                            <GridView>
                                <GridViewColumn Header="功能" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                         FontWeight="SemiBold"
                                                         RenderOptions.BitmapScalingMode="HighQuality"/>
                                                <TextBlock Text=" (默认)"
                                                         FontSize="10"
                                                         Foreground="{DynamicResource ui:InfoForegroundBrush}"
                                                         VerticalAlignment="Bottom"
                                                         Margin="4,0,0,0"
                                                         Visibility="{Binding HasChanged, Converter={StaticResource UniversalConverter}, ConverterParameter=BoolToCollapsed}">
                                                    <TextBlock.ToolTip>
                                                        <ToolTip>
                                                            <TextBlock>
                                                                <Run Text="这是默认快捷键配置"/><LineBreak/>
                                                                <Run Text="双击可编辑自定义快捷键"/>
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </TextBlock.ToolTip>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="说明" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}"
                                                     TextWrapping="Wrap"
                                                     ToolTip="{Binding CommandName, Converter={StaticResource UniversalConverter}, ConverterParameter=CommandToTooltip}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="当前快捷键" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding IsEnabled, Converter={StaticResource UniversalConverter}, ConverterParameter=BoolToEnabledBackground}"
                                                    CornerRadius="4"
                                                    Padding="6,3">
                                                <TextBlock Text="{Binding CurrentKey}"
                                                         HorizontalAlignment="Center"
                                                         Foreground="{Binding IsEnabled, Converter={StaticResource UniversalConverter}, ConverterParameter=BoolToEnabledForeground}"
                                                         FontFamily="Consolas"
                                                         FontWeight="SemiBold"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="操作" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <ui:Button Content="编辑"
                                                          Command="{Binding DataContext.HotkeyViewModel.EditHotkeyCommand, RelativeSource={RelativeSource AncestorType=ui:ListView}}"
                                                          CommandParameter="{Binding}"
                                                          Width="70"
                                                          Margin="4,0,0,0"/>

                                                <ui:Button Content="重置"
                                                          Command="{Binding DataContext.HotkeyViewModel.ResetHotkeyCommand, RelativeSource={RelativeSource AncestorType=ui:ListView}}"
                                                          CommandParameter="{Binding}"
                                                          Width="70"
                                                          Margin="4,0,0,0"
                                                          Visibility="{Binding HasChanged, Converter={StaticResource UniversalConverter}, ConverterParameter=BoolToVisible}">
                                                    <ui:Button.ToolTip>
                                                        <ToolTip>
                                                            <TextBlock>
                                                                <Run Text="重置为默认快捷键: "/><Run Text="{Binding DefaultKey}" FontWeight="Bold"/>
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </ui:Button.ToolTip>
                                                </ui:Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ui:ListView.View>
                    </ui:ListView>
                </StackPanel>
            </ui:Card>

            <!-- 配置管理 -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="配置管理" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,12"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ui:Button Content="导入配置"
                                  Command="{Binding HotkeyViewModel.ImportHotkeysCommand}"
                                  Icon="Upload24"
                                  ToolTip="从JSON文件导入热键配置"
                                  Width="100"/>

                        <ui:Button Content="导出配置"
                                  Command="{Binding HotkeyViewModel.ExportHotkeysCommand}"
                                  Icon="Download24"
                                  ToolTip="导出当前热键配置到JSON文件"
                                  Width="100"
                                  Margin="8,0,0,0"/>
                    </StackPanel>

                    <TextBlock Text="可以导入/导出热键配置，方便在不同设备间共享或备份"
                             FontWeight="Normal"
                             FontSize="12"
                             Foreground="{DynamicResource ui:BodyForegroundSecondaryBrush}"
                             TextAlignment="Center"
                             Margin="0,8,0,0"/>
                </StackPanel>
            </ui:Card>

            <!-- 使用说明 -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="使用说明" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,8"/>

                    <StackPanel>
                        <TextBlock Text="• 快捷键仅在应用程序运行时生效"
                                 FontWeight="Normal"
                                 Foreground="{DynamicResource ui:BodyForegroundBrush}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,0,4"/>

                        <TextBlock Text="• 建议避免使用已被其他程序占用的快捷键"
                                 FontWeight="Normal"
                                 Foreground="{DynamicResource ui:BodyForegroundBrush}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,0,4"/>

                        <TextBlock Text="• 修改快捷键会自动保存并立即生效"
                                 FontWeight="Normal"
                                 Foreground="{DynamicResource ui:BodyForegroundBrush}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,0,4"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
    </Grid>

</UserControl>