<Window x:Class="Sai2Capture.Views.HotkeyCaptureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sai2Capture.Views"
        mc:Ignorable="d"
        Title="设置快捷键" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <Border Background="#1E1E1E" CornerRadius="10" Margin="10">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" Opacity="0.5" BlurRadius="10"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock Text="设置快捷键" 
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Center" 
                             FontSize="16" 
                             FontWeight="SemiBold"
                             Foreground="White"/>
                    <Button Content="✕" 
                          HorizontalAlignment="Right"
                          Background="Transparent"
                          BorderBrush="Transparent"
                          Foreground="White"
                          FontSize="18"
                          Width="40"
                          Click="CancelButton_Click"/>
                </Grid>
            </Border>
            
            <!-- 提示区域 -->
            <Border Grid.Row="1" Background="#252525" Margin="10,5,10,5">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Status}" 
                             FontSize="16" 
                             Foreground="#CCCCCC"
                             TextAlignment="Center"
                             Margin="10"/>
                    
                    <TextBlock Text="按住 Ctrl、Shift、Alt 等修饰键，再按功能键（如 F1-F12）或字母键" 
                             FontSize="12" 
                             Foreground="#888888"
                             TextAlignment="Center"
                             Margin="10,20,10,10"/>
                    <TextBlock Text="按 Enter 确认，按 Esc 取消" 
                             FontSize="12" 
                             Foreground="#888888"
                             TextAlignment="Center"
                             Margin="10,0,10,0"/>
                </StackPanel>
            </Border>
            
            <!-- 捕获区域 -->
            <Border Grid.Row="2" Background="#181818" CornerRadius="8" Margin="20,10,20,10">
                <Grid>
                    <TextBlock Text="{Binding CapturedKeys}" 
                             FontSize="32" 
                             FontWeight="Bold"
                             Foreground="#4CAF50"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             TextAlignment="Center"/>
                    
                    <TextBlock Text="暂无快捷键" 
                             FontSize="24" 
                             Foreground="#666666"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             TextAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CapturedKeys}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
            
            <!-- 按钮区域 -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="确定" 
                      Background="#4CAF50" 
                      Foreground="White"
                      FontWeight="SemiBold"
                      Click="OKButton_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CapturedKeys}" Value="">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="清空" 
                      Background="#FF9800" 
                      Foreground="White"
                      Click="ClearButton_Click"/>
                
                <Button Content="取消" 
                      Background="#757575" 
                      Foreground="White"
                      Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>