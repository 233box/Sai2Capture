<UserControl x:Class="Sai2Capture.Views.HotkeySettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:Sai2Capture.Views"
             xmlns:converters="clr-namespace:Sai2Capture.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 转换器资源 -->
        <converters:BoolToToggleTextConverter x:Key="BoolToToggleTextConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToVisibilityCollapsedConverter x:Key="BoolToVisibilityCollapsedConverter" />
        <converters:BoolToEnabledBackgroundConverter x:Key="BoolToEnabledBackgroundConverter" />
        <converters:BoolToEnabledForegroundConverter x:Key="BoolToEnabledForegroundConverter" />
        <converters:CommandNameToTooltipConverter x:Key="CommandNameToTooltipConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:HotkeyToDisplayNameConverter x:Key="HotkeyToDisplayNameConverter" />

        <Style x:Key="HotkeyCardStyle" TargetType="ui:Card">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Background" Value="{DynamicResource ui:ApplicationBackgroundBrush}"/>
        </Style>

        <Style x:Key="HotkeyItemStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,8,0,8"/>
        </Style>

        <Style x:Key="HotkeyLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource ui:BodyForegroundBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HotkeyButtonStyle" TargetType="ui:Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <Grid x:Name="RootGrid">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16">
                <!-- 热键控制 -->
                <ui:Card Style="{StaticResource HotkeyCardStyle}">
                    <StackPanel>
                        <TextBlock Text="热键控制" Style="{StaticResource CardTitleStyle}"/>

                        <Grid Style="{StaticResource HotkeyItemStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding HotkeysEnabled, Converter={StaticResource BoolToToggleTextConverter}, StringFormat='热键功能: {0}'}"
                                         Style="{StaticResource HotkeyLabelStyle}"
                                         FontWeight="SemiBold"/>
                                <TextBlock Text="启用或禁用所有热键功能"
                                         Style="{StaticResource HotkeyLabelStyle}"
                                         FontSize="12"
                                         Foreground="{DynamicResource ui:BodyForegroundSecondaryBrush}"/>
                            </StackPanel>

                            <ui:ToggleSwitch Grid.Column="1"
                                        IsChecked="{Binding HotkeysEnabled}"
                                        Command="{Binding ToggleHotkeysEnabledCommand}"
                                        VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </ui:Card>

            <!-- 热键列表 -->
            <ui:Card Style="{StaticResource HotkeyCardStyle}">
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="快捷键配置" Style="{StaticResource CardTitleStyle}"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ui:Button Content="重置全部"
                                      Style="{StaticResource HotkeyButtonStyle}"
                                      Command="{Binding ResetAllHotkeysCommand}"
                                      ToolTip="将所有快捷键重置为默认设置"/>
                            <ui:Button Content="保存配置"
                                      Style="{StaticResource HotkeyButtonStyle}"
                                      Command="{Binding SaveHotkeysCommand}"
                                      ToolTip="保存当前热键配置"/>
                        </StackPanel>
                    </Grid>

                    <!-- 热键表格 -->
                    <ui:ListView ItemsSource="{Binding Hotkeys}"
                               VirtualizingStackPanel.IsVirtualizing="True"
                               VirtualizingStackPanel.VirtualizationMode="Recycling"
                               SelectionMode="Single"
                               SelectedItem="{Binding SelectedHotkey}"
                               BorderThickness="0">
                        <ui:ListView.ItemContainerStyle>
                            <Style TargetType="ui:ListViewItem">
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource ui:BorderBrush}"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ui:ListView.ItemContainerStyle>
                        
                        <ui:ListView.View>
                            <GridView>
                                <GridViewColumn Header="功能" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                         FontWeight="SemiBold"
                                                         RenderOptions.BitmapScalingMode="HighQuality"/>
                                                <TextBlock Text=" (默认)" 
                                                         FontSize="10"
                                                         Foreground="{DynamicResource ui:InfoForegroundBrush}"
                                                         VerticalAlignment="Bottom"
                                                         Margin="4,0,0,0"
                                                         Visibility="{Binding HasChanged, Converter={StaticResource BoolToVisibilityCollapsedConverter}, ConverterParameter=True}">
                                                    <TextBlock.ToolTip>
                                                        <ToolTip>
                                                            <TextBlock>
                                                                <Run Text="这是默认快捷键配置"/><LineBreak/>
                                                                <Run Text="双击可编辑自定义快捷键"/>
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </TextBlock.ToolTip>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="说明" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}" 
                                                     TextWrapping="Wrap"
                                                     ToolTip="{Binding CommandName, Converter={StaticResource CommandNameToTooltipConverter}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="当前快捷键" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding IsEnabled, Converter={StaticResource BoolToEnabledBackgroundConverter}}"
                                                    CornerRadius="4"
                                                    Padding="6,3">
                                                <TextBlock Text="{Binding CurrentKey}" 
                                                         HorizontalAlignment="Center"
                                                         Foreground="{Binding IsEnabled, Converter={StaticResource BoolToEnabledForegroundConverter}}"
                                                         FontFamily="Consolas"
                                                         FontWeight="SemiBold"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                
                                <GridViewColumn Header="操作" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <ui:Button Content="编辑"
                                                          Command="{Binding DataContext.EditHotkeyCommand, RelativeSource={RelativeSource AncestorType=ui:ListView}}"
                                                          CommandParameter="{Binding}"
                                                          Style="{StaticResource HotkeyButtonStyle}"
                                                          Width="70"/>
                                                
                                                <ui:Button Content="重置"
                                                          Command="{Binding DataContext.ResetHotkeyCommand, RelativeSource={RelativeSource AncestorType=ui:ListView}}"
                                                          CommandParameter="{Binding}"
                                                          Style="{StaticResource HotkeyButtonStyle}"
                                                          Width="70"
                                                          Visibility="{Binding HasChanged, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <ui:Button.ToolTip>
                                                        <ToolTip>
                                                            <TextBlock>
                                                                <Run Text="重置为默认快捷键: "/><Run Text="{Binding DefaultKey}" FontWeight="Bold"/>
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </ui:Button.ToolTip>
                                                </ui:Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ui:ListView.View>
                    </ui:ListView>
                </StackPanel>
            </ui:Card>

            <!-- 导入导出 -->
            <ui:Card Style="{StaticResource HotkeyCardStyle}">
                <StackPanel>
                    <TextBlock Text="配置管理" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,12"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ui:Button Content="导入配置" 
                                  Command="{Binding ImportHotkeysCommand}"
                                  Icon="Upload24"
                                  ToolTip="从JSON文件导入热键配置"
                                  Style="{StaticResource HotkeyButtonStyle}"
                                  Width="100"/>
                        
                        <ui:Button Content="导出配置" 
                                  Command="{Binding ExportHotkeysCommand}"
                                  Icon="Download24"
                                  ToolTip="导出当前热键配置到JSON文件"
                                  Style="{StaticResource HotkeyButtonStyle}"
                                  Width="100"/>
                    </StackPanel>
                    
                    <TextBlock Text="可以导入/导出热键配置，方便在不同设备间共享或备份" 
                             Style="{StaticResource HotkeyLabelStyle}"
                             FontSize="12"
                             Foreground="{DynamicResource ui:BodyForegroundSecondaryBrush}"
                             TextAlignment="Center"
                             Margin="0,8,0,0"/>
                </StackPanel>
            </ui:Card>

            <!-- 说明 -->
            <ui:Card Style="{StaticResource HotkeyCardStyle}">
                <StackPanel>
                    <TextBlock Text="使用说明" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                 Text="• 快捷键仅在应用程序运行时生效" 
                                 Style="{StaticResource HotkeyLabelStyle}"
                                 Margin="0,0,0,4"/>
                        
                        <TextBlock Grid.Row="1" 
                                 Text="• 建议避免使用已被其他程序占用的快捷键" 
                                 Style="{StaticResource HotkeyLabelStyle}"
                                 Margin="0,0,0,4"/>
                        
                        <TextBlock Grid.Row="2" 
                                 Text="• 双击列表项可快速编辑快捷键" 
                                 Style="{StaticResource HotkeyLabelStyle}"
                                 Margin="0,0,0,4"/>
                    </Grid>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
    
    <!-- 编辑对话框 -->
    <Popup x:Name="EditHotkeyPopup"
           Placement="Center"
           PlacementTarget="{Binding ElementName=RootGrid}"
           Width="400"
           Height="250"
           IsOpen="{Binding ShowEditDialog}"
           PopupAnimation="Slide">
        <Border Background="{DynamicResource ui:ApplicationBackgroundBrush}"
                BorderBrush="{DynamicResource ui:BorderBrush}"
                BorderThickness="1"
                CornerRadius="8">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                         Text="{Binding EditDialogTitle}"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Margin="0,0,0,12"/>
                
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                             Text="快捷键：" 
                             VerticalAlignment="Center"
                             Margin="0,0,8,0"/>
                    
                    <Border Grid.Column="1" 
                           Background="{Binding EditingHotkey.IsEnabled, Converter={StaticResource BoolToEnabledBackgroundConverter}}"
                           CornerRadius="4"
                           Padding="8,4">
                        <TextBlock Text="{Binding EditingHotkey.CurrentKey}" 
                                 VerticalAlignment="Center"
                                 FontFamily="Consolas"
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Center"/>
                    </Border>
                    
                    <ui:Button Grid.Column="2"
                             Content="捕捉"
                             Command="{Binding OpenHotkeyCaptureDialogCommand}"
                             Margin="8,0,0,0"
                             Width="70"/>
                </Grid>
                
                <Grid Grid.Row="2" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                             Text="启用：" 
                             VerticalAlignment="Center"
                             Margin="0,0,8,0"/>
                    
                    <ui:ToggleSwitch Grid.Column="1"
                                 IsChecked="{Binding EditingHotkey.IsEnabled}"
                                 VerticalAlignment="Center"/>
                </Grid>
                
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:Button Content="确定"
                             Command="{Binding SaveEditedHotkeyCommand}"
                             Margin="0,0,8,0"
                             Width="80"/>
                    
                    <ui:Button Content="取消"
                             Command="{Binding CancelEditCommand}"
                             Width="80"/>
                </StackPanel>
            </Grid>
        </Border>
    </Popup>
    </Grid>
</UserControl>